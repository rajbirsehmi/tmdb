<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_height_movie_detail"
            android:padding="5dp"
            android:src="@drawable/icon_star" />

        <TextView
            android:id="@+id/tv_movie_vote_average"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="8.3 / 10.0"
            android:textColor="@android:color/white"
            android:textSize="@dimen/movie_detail_star_popularity_date_text_size" />

        <TextView
            android:id="@+id/tv_movie_vote_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Count : 12344"
            android:textSize="@dimen/movie_detail_star_popularity_date_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_height_movie_detail"
            android:padding="5dp"
            android:src="@drawable/icon_popularity" />

        <TextView
            android:id="@+id/tv_movie_popularity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="123.456"
            android:textColor="@android:color/white"
            android:textSize="@dimen/movie_detail_star_popularity_date_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_height_movie_detail"
            android:padding="5dp"
            android:src="@drawable/icon_release_date" />

        <TextView
            android:id="@+id/tv_movie_release_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2018-12-12"
            android:textSize="@dimen/movie_detail_star_popularity_date_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_open_link_in_imdb"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_height_movie_detail"
            android:padding="5dp"
            android:src="@drawable/icon_open_link" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/label_open_link"
            android:textSize="@dimen/movie_detail_star_popularity_date_text_size" />

    </LinearLayout>

</LinearLayout>