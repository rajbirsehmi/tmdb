<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/iv_gallery_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#79000000"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="@dimen/icon_width_gallery"
            android:layout_height="@dimen/icon_height_gallery"
            android:padding="5dp"
            android:src="@drawable/icon_star" />

        <TextView
            android:id="@+id/tv_gallery_vote_average"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Hello world" />

        <ImageButton
            android:id="@+id/btn_download"
            android:background="?android:attr/selectableItemBackground"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/icon_width_gallery"
            android:layout_height="@dimen/icon_width_gallery"
            android:padding="5dp"
            android:src="@drawable/icon_download" />

    </LinearLayout>

</FrameLayout>